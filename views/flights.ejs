<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Flights</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-3">List of Flights</h1>
        <% if (messages.success_msg) { %>
            <div class="alert alert-success"><%= messages.success_msg %></div>
        <% } %>
        <% if (messages.error_msg) { %>
            <div class="alert alert-danger"><%= messages.error_msg %></div>
        <% } %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Flight Number</th>
                    <th>Departure Airport</th>
                    <th>Arrival Airport</th>
                    <th>Departure Time</th>
                    <th>Arrival Time</th>
                    <th>Airline</th>
                    <th>Aircraft Type</th>
                </tr>
            </thead>
            <tbody>
                <% flights.forEach(flight => { %>
                    <tr>
                        <td><%= flight.FlightNumber %></td>
                        <td><%= flight.DepartureAirport %></td>
                        <td><%= flight.ArrivalAirport %></td>
                        <td><%= new Date(flight.DepartureTime).toLocaleString() %></td>
                        <td><%= new Date(flight.ArrivalTime).toLocaleString() %></td>
                        <td><%= flight.Airline %></td>
                        <td><%= flight.AircraftType %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/flight/create" class="btn btn-secondary">Create Booking </a>
    </div>
</body>
</html>
